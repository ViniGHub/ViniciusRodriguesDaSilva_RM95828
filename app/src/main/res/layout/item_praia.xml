<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/NomePraia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome da praia"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDeletar"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/CidadePraia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NomePraia"
        app:layout_constraintEnd_toStartOf="@id/btnDeletar"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/EstadoPraia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CidadePraia"
        app:layout_constraintEnd_toStartOf="@id/btnDeletar"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btnDeletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>